<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/btn_reverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:tint="@color/design_default_color_primary"
        app:layout_constraintEnd_toStartOf="@+id/btn_back_step"
        app:layout_constraintTop_toTopOf="@+id/btn_back_step"
        app:srcCompat="@drawable/ic_rewind" />

    <ImageButton
        android:id="@+id/btn_back_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:tint="@color/design_default_color_primary"
        app:layout_constraintEnd_toStartOf="@+id/btn_stop"
        app:layout_constraintTop_toTopOf="@+id/btn_stop"
        app:srcCompat="@drawable/ic_play_reverse" />

    <ImageButton
        android:id="@+id/btn_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_stop"
        tools:layout_editor_absoluteY="315dp"
        app:tint="@color/design_default_color_primary" />

    <ImageButton
        android:id="@+id/btn_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:tint="@color/design_default_color_primary"
        app:layout_constraintStart_toEndOf="@+id/btn_stop"
        app:layout_constraintTop_toTopOf="@+id/btn_stop"
        app:srcCompat="@drawable/ic_play" />

    <ImageButton
        android:id="@+id/btn_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:tint="@color/design_default_color_primary"
        app:layout_constraintStart_toEndOf="@+id/btn_step"
        app:layout_constraintTop_toTopOf="@+id/btn_stop"
        app:srcCompat="@drawable/ic_forward" />
</androidx.constraintlayout.widget.ConstraintLayout>